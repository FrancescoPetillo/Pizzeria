extends layout

block content
  .row.justify-content-center
    .col-md-4
      .card.shadow
        .card-body
          h2.card-title.text-center.mb-4 Registrazione
          if error
            .alert.alert-danger= error
          form(method="post", action="/auth/register")
            .mb-3
              label.form-label(for="name") Nome
              input.form-control(type="text", name="name", id="name", required)
            .mb-3
              label.form-label(for="email") Email
              input.form-control(type="email", name="email", id="email", required)
            .mb-3
              label.form-label(for="password") Password
              input.form-control(type="password", name="password", id="password", required)
            button.btn.btn-primary.w-100(type="submit") Registrati
          .mt-3.text-center
            a(href="/auth/login") Hai gi√† un account? Accedi
            br
            a(href="/auth/forgot") Password dimenticata?